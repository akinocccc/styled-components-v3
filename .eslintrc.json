{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:vue/vue3-essential",
    "@vue/eslint-config-prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "parser": "@typescript-eslint/parser",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "vue"
  ],
  "rules": {
    // 缩进2个空格
    "indent": [
      "error",
      2
    ],
    // 使用单引号
    "quotes": [
      "error",
      "single"
    ],
    // 总是使用分号
    "semi": [
      "error",
      "never"
    ],
    // 不允许行末逗号
    "comma-dangle": "error",
    // 警告：不允许使用 console
    "no-console": "off",
    // 错误：不允许使用 debugger
    "no-debugger": "error",
    // Vue模板缩进2个空格
    "vue/html-indent": [
      "error",
      2
    ],
    // 允许函数返回类型不明确
    "@typescript-eslint/explicit-module-boundary-types": "off",
    // 允许使用 any 类型
    "@typescript-eslint/no-explicit-any": "off",
    // 忽略未使用的参数以 _ 开头
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ]
  }
}
